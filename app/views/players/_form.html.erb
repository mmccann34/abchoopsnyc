<%= simple_form_for @player, defaults: { input_html: { class: 'input-block-level' }, label_html: { class: 'hidden' } } do |f| %>
  <% if header %><h2><%= header %></h2><% end %>
  <%= f.input :first_name, placeholder: 'First Name' %>
  <%= f.input :last_name, placeholder: 'Last Name' %>
  <%= f.input :key, placeholder: 'Key' %>
  <%= f.button :submit, class: 'btn-primary btn-large' %>
<% end %>