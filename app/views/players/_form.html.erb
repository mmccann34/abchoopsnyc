<%= simple_form_for @player, html: { multipart: true }, defaults: { input_html: { class: 'input-block-level' }, label_html: { class: 'hide' } } do |f| %>
  <fieldset>
    <% if header %><legend><%= header %></legend><% end %>
    <%= f.input :first_name, placeholder: 'First Name', input_html: { autofocus: 'autofocus' } %>
    <%= f.input :last_name, placeholder: 'Last Name' %>
    <%= f.input :key, placeholder: 'Key' %>
    <%= f.input :profile_pic, label: 'Upload a profile picture:', label_html: { class: '' } %>
    <%= f.button :submit, class: 'btn-primary btn-large btn-block' %>
  </fieldset>
<% end %>