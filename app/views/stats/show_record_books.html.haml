  %br
  =render "record_book_entry", stat_name: "Steals", entries: @career_totals[:steals]
  =render "record_book_entry", stat_name: "Field Goal %", entries: @career_totals[:fgpct], use_percentage: true, percision: 3
  %br
  =render "record_book_entry", stat_name: "3-Point %", entries: @career_totals[:threepct], use_percentage: true, percision: 3
  =render "record_book_entry", stat_name: "Free Throw %", entries: @career_totals[:ftpct], use_percentage: true, percision: 3
  %br
  =render "record_book_entry", stat_name: "Free Throws Made", entries: @career_totals[:ftm]
  =render "record_book_entry", stat_name: "Points from 3's", entries: @career_totals[:threem]
  %br
  =render "record_book_entry", stat_name: "Double Doubles", entries: @career_totals[:doubles]
  =render "record_book_entry", stat_name: "Games Played", entries: @career_totals[:games]
