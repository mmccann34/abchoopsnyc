%ul#playerprof1
  %li.stat_types
    %a.profbutton{href:"#ctotals"} Career Totals
  %li.stat_types
    %a.profbutton{href:"#cpergame"} Career Per Game
  %li.stat_types
    %a.profbutton{href:"#stotals"} Season Totals
