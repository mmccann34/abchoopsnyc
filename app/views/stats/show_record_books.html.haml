    %a.profbutton{href:"#spergame"} Season Per Game
.profstats#ctotals
  =render "record_book_entry", stat_name: "Points", entries: @career_totals[:points]
  =render "record_book_entry", stat_name: "Rebounds", entries: @career_totals[:rebounds]
  %br
  =render "record_book_entry", stat_name: "Assists", entries: @career_totals[:assists]
