%table.record-book-entry{cellpadding:"5", cellspacing:"0", style:"display:inline-table; border: 1px solid #e7e7e7; margin-bottom:20px;", width:"390px"}
  -if local_assigns.fetch(:single_game, false)
    %colgroup
      %col{ span:"1", style:"width: 59px;" }
      %col{ span:"1", style:"width: 164px;" }
      %col{ span:"1", style:"width: 130px;" }
      %col{ span:"1", style:"width: 35px;" }
  -else
    %colgroup
      %col{ span:"1", style:"width: 59px;" }
      %col{ span:"1", style:"width: 164px;" }
      %col{ span:"1", style:"width: 85px;" }
      %col{ span:"1", style:"width: 80px;" }
  %thead.statthead
    %tr
      %th{colspan:"4", style:"font-size:14px; font-weight:bold;"}= stat_name
    %tr
      %th{colspan:"2"} Player
      %th #{local_assigns.fetch(:single_game, false) ? "Game" : "Team"}
      %th{style:"padding-left: 2px;"} Total
  %tbody
    -entries.each_with_index do |entry, i|
      %tr{class: "#{cycle('odd2', 'even2')}"}
        %td
          -if i < 3
            =render "headshot_thumb", player: entry
          -else
            &nbsp;
        %td.text-left
          %a{href:stats_player_path(entry.id)} #{entry.display_name.blank? ? entry.first_name + " " + entry.last_name : entry.display_name}
        -if local_assigns.fetch(:single_game, false)
          %td
            %a{href:stats_boxscore_path(entry.game_id)}= entry.game_desc
        -else
          %td
            %a{href:stats_team_path(entry.team_id)}= entry.team_name
        %td= local_assigns.fetch(:use_percentage, false) ? number_with_precision(entry.total, precision: (local_assigns.fetch(:percision, 1))) : number_with_delimiter(entry.total)
    -reset_cycle