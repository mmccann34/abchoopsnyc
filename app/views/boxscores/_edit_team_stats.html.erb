<table class="table table-striped">
  <thead>
    <tr>
      <th>PLAYER</th>
      <th>FGM</th>
      <th>FGA</th>
      <th>3PM</th>
      <th>3PA</th>
      <th>FTM</th>
      <th>FTA</th>
      <th>ORB</th>
      <th>DRB</th>
      <th>AST</th>
      <th>STL</th>
      <th>BLK</th>
      <th>FL</th>
      <th>TO</th>
    </tr>
  </thead>
  <tbody>
    <% stat_lines.each do |stat| %>
      <tr>
        <td><%= link_to stat.player.name, stat.player %></td>
        <td><input name="stat_lines[<%= stat.id %>[fgm]]" type="number" min="0" value="<%= stat.fgm %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[fga]]" type="number" min="0" value="<%= stat.fga %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[threem]]" type="number" min="0" value="<%= stat.threem %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[threea]]" type="number" min="0" value="<%= stat.threea %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[ftm]]" type="number" min="0" value="<%= stat.ftm %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[fta]]" type="number" min="0" value="<%= stat.fta %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[orb]]" type="number" min="0" value="<%= stat.orb %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[drb]]" type="number" min="0" value="<%= stat.drb %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[ast]]" type="number" min="0" value="<%= stat.ast %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[stl]]" type="number" min="0" value="<%= stat.stl %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[blk]]" type="number" min="0" value="<%= stat.blk %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[fl]]" type="number" min="0" value="<%= stat.fl %>"></td>
        <td><input name="stat_lines[<%= stat.id %>[to]]" type="number" min="0" value="<%= stat.to %>"></td>
      </tr>
    <% end %>
  </tbody>
</table>